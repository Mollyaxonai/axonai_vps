FROM continuumio/miniconda3:latest

WORKDIR /app

# Copy only env file first (better caching)
COPY environment.docker.yml /app/environment.yml

# Create env
RUN conda env create -f /app/environment.yml && conda clean -a -y

# Make sure subsequent RUN/CMD use the env
SHELL ["conda", "run", "-n", "opencap_clean", "/bin/bash", "-c"]

# Copy the rest of the code
COPY . /app

EXPOSE 8080

CMD ["conda", "run", "-n", "opencap_clean", "uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8080"]